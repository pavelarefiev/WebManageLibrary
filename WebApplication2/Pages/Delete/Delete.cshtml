@model WebApplication2.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete File Record";
}

<h2>Delete File Record</h2>

<h3>Вы уверены что хотите удалить этот файл?</h3>

<div>
    <h4>FileRecord</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
        FileName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileRecord.FileName)
        </dd>
        <dt class="col-sm-2">
        Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileRecord.Author)
        </dd>
        <dt class="col-sm-2">
