@page
@model WebApplication2.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Add new book";
}

<h1>Add new book</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Book.Title">Title</label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author">Author</label>
        <input asp-for="Book.Author" class="form-control" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UploadedFile">Upload file</label>
        <input asp-for="UploadedFile" type="file" class="form-control" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>