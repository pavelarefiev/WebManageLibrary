@page
@model IndexModel
@inject WebApplication1.Pages.Data.ApplicationDbContext _context
@{
    ViewData["Title"] = "Книги";
}
<h2>Список книг</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@book.Id">Редактировать</a> |
                    <a asp-page="./Delete" asp-route-id="@book.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-page="./Create">Добавить новую книгу</a>